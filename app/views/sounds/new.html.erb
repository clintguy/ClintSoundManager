<%= form_for :sound, url: sounds_path do |f| %>
    <p>
      <%= f.label :name  %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :format %><br>
      <%= f.text_field :format %>
    </p>

    <p>
      <%= f.label :length %><br>
      <%= f.text_field :length %>
    </p>

    <p>
      <%= f.label :size %><br>
      <%= f.text_field :size %>
    </p>

    <p>
      <%= f.submit %>
      </p>
<% end %>
<%= link_to 'Back', sounds_path %>