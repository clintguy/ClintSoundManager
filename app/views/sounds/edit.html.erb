<% content_for :title do %>Edit Sound<% end %>
<% content_for :description do %>Edit and existing Sound<% end %>

  <head>
      <title><%= content_for?(:title) ? yield(:title) : "Soundmanager" %></title>
      <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
      <%= csrf_meta_tags %>
      <!--[if lt IE 9]>
        <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
        </script>
      <![endif]-->
  </head>
  <body>
    <header>
      <div class ="col-md-6 col-md-offset-3" style="padding: 25px" >
        <%= form_for :sound, url: sounds_path do |f| %>
            <p>
              <%= f.label :name  %><br>
              <%= f.text_field  @sound.name %>
            </p>

            <p>
              <%= f.label :format %><br>
              <%= f.text_field :format %>
            </p>

            <p>
              <%= f.label :length %><br>
              <%= f.text_field :length %>
            </p>

            <p>
              <%= f.label :size %><br>
              <%= f.text_field :size %>
            </p>

            <p>
              <%= f.submit %>
              </p>
        <% end %>
        <%= link_to 'Back', sounds_path %>
      </div>
    </header>
  </body>